{
  "name": "stylelint-cascade-layers",
  "description": "Stylelint plugin to enforce usage of cascade layers",
  "version": "0.3.0",
  "type": "module",
  "author": {
    "name": "Maarten Van Hoof",
    "url": "https://mrtnvh.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/mrtnvh/stylelint-cascade-layers#readme",
  "keywords": [
    "stylelint",
    "plugin",
    "css",
    "cascade layers"
  ],
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "npm run build -- -w",
    "build": "pkgroll",
    "lint": "./node_modules/stylelint/bin/stylelint.mjs -c src/__tests__/stylelint.test.config.cjs src/__tests__/*.css",
    "lint:16": "./node_modules/stylelint-16/bin/stylelint.mjs -c src/__tests__/stylelint.test.config.cjs src/__tests__/*.css",
    "test": "node --import tsx --test ./src/**/*.test.ts",
    "test:watch": "node --test --watch",
    "changelog": "npx conventional-changelog-cli -i CHANGELOG.md -sa",
    "release": "np"
  },
  "peerDependencies": {
    "stylelint": "^15.11.0"
  },
  "devDependencies": {
    "@matteo.collina/snap": "^0.3.0",
    "@types/node": "^20.19.10",
    "conventional-changelog-cli": "^5.0.0",
    "np": "^10.2.0",
    "pkgroll": "^2.15.3",
    "stylelint": "15.11.0",
    "stylelint-16": "npm:stylelint@^16.23.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "20.8.0"
  }
}
